    <select id="isExistProduct" parameterType="String" resultType="Integer">
        SELECT
            COUNT(*)
        FROM
            tbl_product
        WHERE
            p_link = #{p_link}
    </select>

    <insert id="insertProducts" parameterType="com.office.house.product.ProductDto">
        INSERT INTO
            tbl_product(p_brand, p_name, p_sales_price, p_img, p_link, p_category, p_reg_date, p_mod_date)
        VALUES(#{p_brand}, #{p_name}, #{p_sales_price}, #{p_img}, #{p_link}, #{p_category}, NOW(), NOW())
    </insert>

    <update id="updateProducts" parameterType="com.office.house.product.ProductDto">
        UPDATE
            tbl_product
        SET
            p_brand = #{p_brand},
            p_name = #{p_name},
            p_sales_price = #{p_sales_price},
            p_img = #{p_img},
            p_category = #{p_category},
            p_mod_date = NOW()
        WHERE
            p_link = #{p_link}
    </update>

    <insert id="insertLikeCount" parameterType="String">
        INSERT INTO tbl_like(l_type, l_content_no, u_id, l_reg_date, l_mod_date)
        VALUES (#{type}, #{no}, #{u_id}, NOW(), NOW())
    </insert>

    <delete id="deleteLikeCount" parameterType="String">
        DELETE
        FROM tbl_like
        WHERE l_type = #{type}
          AND l_content_no = #{no}
          AND u_id = #{u_id}
    </delete>

    <select id="selectLikeCount" parameterType="String" resultType="Integer">
        SELECT COUNT(*)
        FROM tbl_like
        WHERE l_type = #{type}
          AND l_content_no = #{no}
    </select>

    <select id="selectLikeProducts" parameterType="hashMap" resultType="com.office.house.product.ProductDto">
        SELECT *
        FROM tbl_product
        WHERE p_no
            IN (SELECT l_content_no
                FROM tbl_like
                WHERE l_type = 1
                  AND u_id = #{u_id}
              )
            LIMIT #{skip}, #{amount}

    </select>

    <select id="selectLikeProductsCnt" parameterType="String" resultType="Integer">
        SELECT COUNT(*) FROM tbl_product WHERE p_no IN (SELECT l_content_no FROM tbl_like WHERE l_type = 1 AND u_id = #{u_id})
    </select>

