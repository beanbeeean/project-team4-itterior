            p_no = #{no}
    </update>

    <select id="selectLikedProduct" parameterType="java.util.List" resultType="com.office.house.like.LikeDto">
        SELECT
            *
        FROM
            tbl_like
        WHERE
        l_type = 1 AND
        l_content_no IN
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
