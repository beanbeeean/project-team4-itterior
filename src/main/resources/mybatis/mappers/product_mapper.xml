    <select id="isExistProduct" parameterType="String" resultType="Integer">
        SELECT
            COUNT(*)
        FROM
            tbl_product
        WHERE
            p_link = #{p_link}
    </select>

    <insert id="insertProducts" parameterType="com.office.house.product.ProductDto">
        INSERT INTO
            tbl_product(p_brand, p_name, p_sales_price, p_img, p_link, p_category, p_reg_date, p_mod_date)
        VALUES(#{p_brand}, #{p_name}, #{p_sales_price}, #{p_img}, #{p_link}, #{p_category}, NOW(), NOW())
    </insert>

    <update id="updateProducts" parameterType="com.office.house.product.ProductDto">
        UPDATE
            tbl_product
        SET
            p_brand = #{p_brand},
            p_name = #{p_name},
            p_sales_price = #{p_sales_price},
            p_img = #{p_img},
            p_category = #{p_category},
            p_mod_date = NOW()
        WHERE
            p_link = #{p_link}
    </update>

    <update id="updateLikeCountForProduct">
        UPDATE
            tbl_product
        SET
            p_like = #{likeCnt}
        WHERE
            p_no = #{no}
    </update>

    <select id="selectLikedProduct" parameterType="java.util.List" resultType="com.office.house.like.LikeDto">
        SELECT
            *
        FROM
            tbl_like
        WHERE
        l_type = 1 AND
        l_content_no IN
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectProductByNo" parameterType="String" resultType="com.office.house.product.ProductDto">
        SELECT
            *
        FROM
            tbl_product
        WHERE
            p_no = #{no}
    </select>

    <update id="updateHitCount" parameterType="String">
        UPDATE
            tbl_product
        SET
            p_hit = p_hit + 1
        WHERE
            p_no = #{no}
    </update>
